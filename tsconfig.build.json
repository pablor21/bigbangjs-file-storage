{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": [
    "**node_modules**",
    "**dist**",
    "**/*.js",
    "**/*spec.ts",
    "**/*test.ts",
    "**/*.d.ts",
    "**/tests/*"
  ]
}